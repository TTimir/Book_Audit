@model IEnumerable<BookAudit.Models.Domain.Genre>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Genre/Add">+ Add More Genre</a>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6">
            <h3> Genres </h3>

            <table class="table table-stripped table-bordered table-dark border border-4">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i></a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are You Sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


